extends layout
include mixins/_orders
block content

  .container
    h2= title
    hr
    if user
      h4= `Hi, ${ user.fname }! Welcome back!`
      if orders.length > 0
        h4 Your bookings:
        each order in orders
          +orders(idx, order)
      else
        h4 You currently don't have any orders.
    else
      h3 Please login to view account Details
      a.btn.btn-primary(href='/login')
    
      
