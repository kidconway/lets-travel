doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
  body
    block header
      header
        .container-fluid.w-75
          nav(class='navbar navbar-expand-sm navbar-light bg-light')
            a(href="/" class='navbar-brand')
              img(src='/images/logo.png' class='logo')
            div(class='collapse navbar-collapse' id='navbar-list')
              ul(class='navbar-nav ml-auto')
                li(class='nav-item')
                  a(href='/sign-up' class='nav-link') Sign Up
                li(class='nav-item') 
                  a(href='/login' class='nav-link') Login
        .container.mb-2
          form.row.bg-dark.text-white.pt-1(action='/results' method='POST')
            .col-md-6
              .form-group
                label(for='destination') Destination
                input.form-control.form-control-sm(type='text' id='destination', name='destination' required)
              .form-group
                label(for='duration') Duration
                input.form-control.form-control-sm(type='text' id='duration', name='duration' required)
              .form-group
                label(for='departure-date') Departure Date
                input.form-control.form-control-sm(type='date' id='departure-date', name='durationDate' required)
            .col-md-6
              .form-group
                label(for='number-guests') # of Guests
                input.form-control.form-control-sm(type='number' id='number-guests', name='numberGuests' required)
              .form-group
                select.form-control.form-control-sm(name='stars')
                  option(value='1') Min *
                  option(value='2') Min **
                  option(value='3') Min ***
                  option(value='4') Min ****
                  option(value='5') Min *****
              .form-group
                select.form-control.form-control-sm(name='sort')
                  option(value='1') Price: Low - High
                  option(value='-1') Price High - Low
              .form-group
                button.form-control.btn.btn-success(type='submit') Search
        .mb-3
          img.img-fluid.w-75.mx-auto.d-block(src='/images/beach.jpg')
           
    block content
    
