doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
  body(class='container')
    block header
      header
        nav.row(class='navbar navbar-expand-sm navbar-light bg-light')
          a(href="/" class='navbar-brand')
            img(src='/images/logo.png' class='logo')
          div(class='collapse navbar-collapse' id='navbar-list')
            ul(class='navbar-nav ml-auto')
              li(class='nav-item')
                a(href='/sign-up' class='nav-link') Sign Up
              li(class='nav-item') 
                a(href='/login' class='nav-link') Login
        .search_nav
          form.row.bg-dark.text-white.pt-1
            .col-md-6
              .form-group
                label(for='destination') Destination
                input.form-control.form-control-sm(type='text' id='destination', name='destination' required)
              .form-group
                label(for='duration') Duration
                input.form-control.form-control-sm(type='text' id='duration', name='duration' required)
              .form-group
                label(for='departure-date') Departure Date
                input.form-control.form-control-sm(type='date' id='departure-date', name='durationDate' required)
            .col-md-6
              .form-group
                label(for='number-guests') # of Guests
                input.form-control.form-control-sm(type='number' id='number-guests', name='numberGuests' required)
              .form-group
                select.form-control.form-control-sm(name='stars')
                  option(value='*') Min *
                  option(value='**') Min **
                  option(value='***') Min ***
                  option(value='****') Min ****
                  option(value='*****') Min *****
              .form-group
                select.form-control.form-control-sm(name='sort')
                  option(value='1') Price: Low - High
                  options(value='1') Price High - Low
              .form-group
                button.form-control.btn.btn-success(type='submit') Search
        img.img-fluid.w-100.mb-3(src='/images/beach.jpg')
           
    block content
    
