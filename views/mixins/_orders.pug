mixin orders(order)
  .row
    ul
      li= `Order ref: ${ order._id }`
        each data in order.hotel_data
          li= `Hotel: ${ data.hotel_name }`
          li= `Country: ${ data.country }`
          li= `Departure Date: ${ order.order_details.departureDate }`
          li= `Number of Nights: ${ order.order_details.duration }`
          li= `Guests: ${ order.order_details.numberGuests }`
